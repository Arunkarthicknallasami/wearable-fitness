<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jeffrey.testlocalnotification.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/testBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Local Notification" />

        <Button
            android:id="@+id/testBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Local Notification Service"
            android:layout_below="@+id/testBtn1"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
